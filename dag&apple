#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    char mas[10][41];
    int i;
    int x=10,y=5;
    int ox,oy;
    int ax=5,ay=3;
    int count=0;
    char key;

    srand(time(NULL));

    do {
        sprintf(mas[0], "########################################");
        for (i = 1; i < 9; i++) {
            sprintf(mas[i], "#                                      #");
        }
        sprintf(mas[9], "########################################");


        mas[y][x] = '@';
        mas[ay][ax] = '*';

        system("cls");

        for (i = 0; i < 10; i++) {
            printf("%s\n", mas[i]);
        }
        key = getchar();

        ox=x;
        oy=y;

        if (key == 'w') y--;
        if (key == 's') y++;
        if (key == 'a') x--;
        if (key == 'd') x++;
        if(mas[y][x]=='#'){
            x=ox;
            y=oy;
        }
        if((x==ax)&&(y==ay)){
            ax=rand()*1.0/RAND_MAX*18+1;
            ay=rand()*1.0/RAND_MAX*8+1;
            count+=1;
        }
        printf("count=%d\n",count);
    }
    while(key!='e');
    return 0;
}
